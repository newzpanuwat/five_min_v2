<h1>Posts Listing</h1>
<hr>

<% @posts.each do |post| %>
    <strong>Title: </strong><%= post.title %><br />
    <strong>Body: </strong><%= post.body%><br />
    <strong>Created at: </strong><%= post.created_at.strftime("%d-%m-%Y") %><br />
     <%= link_to 'show', post %><br />
     <hr>

<br />
<% end %>

<%= link_to 'Add new Post', new_post_path %>