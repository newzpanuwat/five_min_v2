<h1>Add new Post</h1>
    <%= form_for (@post) do |f| %>
        <div class="field">
            <%= f.label :title %> <br />
            <%= f.text_field :title %><br />
        </div>

        <div class="field">
            <%= f.label :body %> <br />
            <%= f.text_area :body %><br />
        </div>

         <div class="field">
            <%= f.label :author %> <br />
            <%= f.select :author_id, Author.all.collect { |p| [ p.name, p.id ] }, blank: 'Pick someone' %><br />
        </div>


        <div class="action">
            <%= f.submit  %>
        </div>
    <% end %>

<%= link_to 'Back', authors_path %>